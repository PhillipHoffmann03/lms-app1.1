<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :password, hint: "Leave blank if you don't want to change it" %>
    <%= f.input :role, collection: ['Admin', 'Teacher', 'Student', 'Parent'], prompt: "Select a role" %>
    <%= f.input :profile_id, hint: "Select the associated profile" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
